{
  "extends": "@staplify/typescript-config/base.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "lib": ["DOM", "ES2023"],
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/exports.js"],
  "exclude": ["test/**/*", "dist/**/*", "node_modules/**/*"]
}
